<div class="container-fluid">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Surname</th>
        <th>Phone number</th>
        <th>Admin status</th>
        <th colspan="2"></th>
      </tr>
    </thead>  

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, admin_user_path(user), class: 'btn-link'%> </td>
          <td><%= user.surname %> </td>
          <td><%= user.phone_number %></td>
          <td><%= user.status %></td>
          <td><%= link_to 'Edit profile', edit_admin_user_path(user), class: 'btn bg-success-subtle rounded-0'%></td>
          <td><%= link_to 'Delete user', admin_user_path(user), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"}, class: 'btn bg-success-subtle rounded-0' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>